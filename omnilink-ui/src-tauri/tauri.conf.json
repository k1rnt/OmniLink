{
  "$schema": "https://raw.githubusercontent.com/nicehash/tauri/refs/heads/dev/crates/tauri-config-schema/schema.json",
  "productName": "OmniLink",
  "version": "0.1.30",
  "identifier": "com.omnilink.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "OmniLink",
        "width": 900,
        "height": 600,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "msi", "nsis", "deb", "appimage"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      },
      "entitlements": null,
      "exceptionDomain": "localhost"
    },
    "windows": {
      "webviewInstallMode": { "type": "downloadBootstrapper" }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk3MzMwOEU3OUYxQzU0QTgKUldTb1ZCeWY1d2d6bDBUS2loUHA5bVpiZnQ4TXJLZlB0TWZ1U3ltemFGdnRneHI1WTVWbXVtaFMK",
      "endpoints": [
        "https://github.com/k1rnt/OmniLink/releases/latest/download/latest.json"
      ]
    }
  }
}
